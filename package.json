{
  "name": "bdc_leaderboard",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/web"
  ],
  "packageManager": "npm@10",
  "scripts": {
    "dev": "npm -w apps/api run dev & npm -w apps/web run dev",
    "dev:api": "npm -w apps/api run dev",
    "dev:web": "npm -w apps/web run dev",
    "seed": "npm -w apps/api run seed",
    "prisma:generate": "npm -w apps/api run prisma:generate",
    "prisma:push": "npm -w apps/api run prisma:push",
    "build": "npm -w apps/api run build && npm -w apps/web run build",
    "test": "echo \"no tests\""
  }
}
